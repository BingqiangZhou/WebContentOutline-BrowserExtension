{
  "manifest_version": 3,
  "name": "网页内容大纲插件",
  "version": "0.1.0",
  "description": "为指定站点生成可折叠的浮动目录，支持左/右侧显示与多选择器配置（CSS/XPath）。",
  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/utils.js", "src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ]
}